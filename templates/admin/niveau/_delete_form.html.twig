<form method="post" action="{{ path('app_niveau_delete', {'id': niveau.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce niveau? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ niveau.id) }}">
    <button class="btn btn-error">
        <i data-feather="trash"></i>
        Supprimer le niveau
    </button>
</form>
