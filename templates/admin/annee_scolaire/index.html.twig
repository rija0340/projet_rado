{% extends 'admin_base.html.twig' %}

{% block title %}Années Scolaires - School Management System{% endblock %}

{% block page_title %}Gestion des Années Scolaires{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_annee_scolaire_new') }}" class="btn btn-primary">
        <i data-feather="plus"></i>
        Ajouter une année scolaire
    </a>
{% endblock %}

{% block body %}
    <div class="card bg-base-100 shadow">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Libellé</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for annee_scolaire in annee_scolaires %}
                        <tr>
                            <td>{{ annee_scolaire.id }}</td>
                            <td>{{ annee_scolaire.libelle }}</td>
                            <td>{{ annee_scolaire.dateDebut ? annee_scolaire.dateDebut|date('d/m/Y') : '' }}</td>
                            <td>{{ annee_scolaire.dateFin ? annee_scolaire.dateFin|date('d/m/Y') : '' }}</td>
                            <td>
                                {% if annee_scolaire.active %}
                                    <span class="badge badge-success">Oui</span>
                                {% else %}
                                    <span class="badge badge-error">Non</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="flex gap-2">
                                    <a href="{{ path('app_annee_scolaire_show', {'id': annee_scolaire.id}) }}" class="btn btn-sm btn-info">
                                        <i data-feather="eye"></i>
                                    </a>
                                    <a href="{{ path('app_annee_scolaire_edit', {'id': annee_scolaire.id}) }}" class="btn btn-sm btn-warning">
                                        <i data-feather="edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_annee_scolaire_delete', {'id': annee_scolaire.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette année scolaire?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annee_scolaire.id) }}">
                                        <button class="btn btn-sm btn-error">
                                            <i data-feather="trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Aucune année scolaire trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
