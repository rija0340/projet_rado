{% extends 'admin_base.html.twig' %}

{% block title %}Liste des étudiants - School Management System{% endblock %}

{% block page_title %}Liste des étudiants{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_etudiant_new') }}" class="btn btn-primary">
        <i data-feather="plus" class="w-4 h-4"></i>
        Ajouter étudiant
    </a>
{% endblock %}

{% block body %}
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Total Étudiants</h2>
                        <p class="text-2xl font-bold">{{ etudiants|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-primary/10 text-primary">
                        <i data-feather="users" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Hommes</h2>
                        <p class="text-2xl font-bold">{{ etudiants|filter(e => e.sexe == 'M')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-info/10 text-info">
                        <i data-feather="user" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Femmes</h2>
                        <p class="text-2xl font-bold">{{ etudiants|filter(e => e.sexe == 'F')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-success/10 text-success">
                        <i data-feather="user" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table -->
    <div class="card bg-base-100 shadow">
        <div class="card-body">
            <div class="flex items-center justify-between mb-4">
                <h2 class="card-title">Étudiants</h2>
                <div class="flex gap-2">
                    <div class="form-control">
                        <input type="text" placeholder="Rechercher..." class="input input-bordered input-sm w-full max-w-xs" />
                    </div>
                    <div class="dropdown dropdown-end">
                        <label tabindex="0" class="btn btn-sm btn-ghost">
                            <i data-feather="filter" class="w-4 h-4"></i>
                        </label>
                        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                            <li><a>Tous</a></li>
                            <li><a>Hommes</a></li>
                            <li><a>Femmes</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>
                                <label>
                                    <input type="checkbox" class="checkbox checkbox-sm" />
                                </label>
                            </th>
                            <th>Étudiant</th>
                            <th>Sexe</th>
                            <th>Date de naissance</th>
                            <th>Téléphone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for etudiant in etudiants %}
                            <tr class="hover">
                                <td>
                                    <label>
                                        <input type="checkbox" class="checkbox checkbox-sm" />
                                    </label>
                                </td>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar">
                                            <div class="w-12 rounded-full">
                                                <img src="https://images.unsplash.com/photo-{{ 1500000000000 + (etudiant.id * 12345) }}?w=100&h=100&fit=crop&crop=face" alt="Avatar" />
                                            </div>
                                        </div>
                                        <div>
                                            <div class="font-bold">{{ etudiant.nom }} {{ etudiant.prenom }}</div>
                                            <div class="text-sm opacity-50">ID: {{ etudiant.id }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {% if etudiant.sexe == 'M' %}
                                        <div class="badge badge-info gap-2">
                                            <i data-feather="user" class="w-3 h-3"></i>
                                            Homme
                                        </div>
                                    {% elseif etudiant.sexe == 'F' %}
                                        <div class="badge badge-success gap-2">
                                            <i data-feather="user" class="w-3 h-3"></i>
                                            Femme
                                        </div>
                                    {% else %}
                                        <div class="badge badge-ghost">N/A</div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if etudiant.dateNaissance %}
                                        <div class="text-sm">{{ etudiant.dateNaissance|date('d/m/Y') }}</div>
                                        <div class="text-xs opacity-50">{{ etudiant.dateNaissance|date('Y-m-d') }}</div>
                                    {% else %}
                                        <span class="text-gray-400">Non renseigné</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if etudiant.telephone %}
                                        <div class="flex items-center gap-2">
                                            <i data-feather="phone" class="w-4 h-4 text-primary"></i>
                                            {{ etudiant.telephone }}
                                        </div>
                                    {% else %}
                                        <span class="text-gray-400">Non renseigné</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="flex gap-2">
                                        <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}" class="btn btn-ghost btn-sm tooltip" data-tip="Voir">
                                            <i data-feather="eye" class="w-4 h-4"></i>
                                        </a>
                                        <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}" class="btn btn-ghost btn-sm tooltip" data-tip="Modifier">
                                            <i data-feather="edit-2" class="w-4 h-4"></i>
                                        </a>
                                        <button class="btn btn-ghost btn-sm text-error tooltip" data-tip="Supprimer" onclick="confirmDelete({{ etudiant.id }})">
                                            <i data-feather="trash-2" class="w-4 h-4"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-12">
                                    <div class="flex flex-col items-center gap-4">
                                        <i data-feather="users" class="w-16 h-16 text-gray-300"></i>
                                        <div>
                                            <h3 class="text-lg font-medium text-gray-500">Aucun étudiant trouvé</h3>
                                            <p class="text-gray-400">Commencez par ajouter votre premier étudiant</p>
                                        </div>
                                        <a href="{{ path('app_etudiant_new') }}" class="btn btn-primary">
                                            <i data-feather="plus" class="w-4 h-4"></i>
                                            Ajouter un étudiant
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {% if etudiants|length > 0 %}
            <div class="flex items-center justify-between mt-4">
                <div class="text-sm text-gray-500">
                    Affichage de {{ etudiants|length }} étudiant(s)
                </div>
                <div class="join">
                    <button class="join-item btn btn-sm">«</button>
                    <button class="join-item btn btn-sm btn-active">1</button>
                    <button class="join-item btn btn-sm">2</button>
                    <button class="join-item btn btn-sm">3</button>
                    <button class="join-item btn btn-sm">»</button>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <dialog id="delete_modal" class="modal">
        <div class="modal-box">
            <h3 class="font-bold text-lg">Confirmer la suppression</h3>
            <p class="py-4">Êtes-vous sûr de vouloir supprimer cet étudiant ? Cette action ne peut pas être annulée.</p>
            <div class="modal-action">
                <form method="dialog">
                    <button class="btn">Annuler</button>
                    <button class="btn btn-error" onclick="deleteStudent()">Supprimer</button>
                </form>
            </div>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>
{% endblock %}

{% block javascripts %}
<script>
    let studentToDelete = null;
    
    function confirmDelete(studentId) {
        studentToDelete = studentId;
        document.getElementById('delete_modal').showModal();
    }
    
    function deleteStudent() {
        if (studentToDelete) {
            // Here you would typically make an AJAX request to delete the student
            console.log('Deleting student with ID:', studentToDelete);
            // For now, just reload the page or redirect
            // window.location.href = '/admin/etudiant/' + studentToDelete + '/delete';
        }
        studentToDelete = null;
    }
    
    // Search functionality
    document.querySelector('input[placeholder="Rechercher..."]').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            if (row.querySelector('.font-bold')) {
                const name = row.querySelector('.font-bold').textContent.toLowerCase();
                const phone = row.cells[4].textContent.toLowerCase();
                
                if (name.includes(searchTerm) || phone.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        });
    });
</script>
{% endblock %}
