{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Inscriptions - School Management System{% endblock %}

{% block page_title %}Gestion des Inscriptions{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_inscription_new') }}" class="btn btn-primary">
        <i data-feather="user-plus" class="w-4 h-4"></i>
        Nouvelle inscription
    </a>
{% endblock %}

{% block body %}
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Total Inscriptions</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-primary/10 text-primary">
                        <i data-feather="clipboard-list" class="w-6 h-6"></i>
                    </div>
                </div>
                <div class="text-xs text-gray-500">Cette année scolaire</div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">En Attente</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|filter(i => i.statut == 'en_attente')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-warning/10 text-warning">
                        <i data-feather="clock" class="w-6 h-6"></i>
                    </div>
                </div>
                <div class="text-xs text-gray-500">À traiter</div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Validées</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|filter(i => i.statut == 'validee')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-success/10 text-success">
                        <i data-feather="check-circle" class="w-6 h-6"></i>
                    </div>
                </div>
                <div class="text-xs text-gray-500">Confirmées</div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Refusées</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|filter(i => i.statut == 'refusee')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-error/10 text-error">
                        <i data-feather="x-circle" class="w-6 h-6"></i>
                    </div>
                </div>
                <div class="text-xs text-gray-500">Non acceptées</div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card bg-base-100 shadow mb-6">
        <div class="card-body">
            <div class="flex flex-wrap gap-4">
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Rechercher</span>
                    </label>
                    <input type="text" placeholder="Nom, prénom..." class="input input-bordered input-sm w-64" id="searchInput" />
                </div>
                
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Statut</span>
                    </label>
                    <select class="select select-bordered select-sm w-40" id="statusFilter">
                        <option value="">Tous</option>
                        <option value="en_attente">En attente</option>
                        <option value="validee">Validée</option>
                        <option value="refusee">Refusée</option>
                    </select>
                </div>
                
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Année scolaire</span>
                    </label>
                    <select class="select select-bordered select-sm w-40" id="yearFilter">
                        <option value="">Toutes</option>
                        <option value="2024-2025">2024-2025</option>
                        <option value="2023-2024">2023-2024</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Inscriptions Table -->
    <div class="card bg-base-100 shadow">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>
                                <label>
                                    <input type="checkbox" class="checkbox checkbox-sm" />
                                </label>
                            </th>
                            <th>Étudiant</th>
                            <th>Classe demandée</th>
                            <th>Date d'inscription</th>
                            <th>Statut</th>
                            <th>Montant</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for inscription in inscriptions %}
                            <tr class="hover inscription-row">
                                <td>
                                    <label>
                                        <input type="checkbox" class="checkbox checkbox-sm" />
                                    </label>
                                </td>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar">
                                            <div class="w-12 rounded-full">
                                                <img src="https://images.unsplash.com/photo-{{ 1500000000000 + (inscription.etudiant.id * 12345) }}?w=100&h=100&fit=crop&crop=face" alt="Avatar" />
                                            </div>
                                        </div>
                                        <div>
                                            <div class="font-bold">{{ inscription.etudiant.nom }} {{ inscription.etudiant.prenom }}</div>
                                            <div class="text-sm opacity-50">{{ inscription.etudiant.telephone }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <i data-feather="book" class="w-4 h-4 text-primary"></i>
                                        <div>
                                            <div class="font-medium">{{ inscription.classe.nom }}</div>
                                            <div class="text-sm opacity-50">{{ inscription.classe.niveau.nom }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-sm">{{ inscription.dateInscription|date('d/m/Y') }}</div>
                                    <div class="text-xs opacity-50">{{ inscription.dateInscription|date('H:i') }}</div>
                                </td>
                                <td>
                                    {% if inscription.statut == 'en_attente' %}
                                        <div class="badge badge-warning gap-2">
                                            <i data-feather="clock" class="w-3 h-3"></i>
                                            En attente
                                        </div>
                                    {% elseif inscription.statut == 'validee' %}
                                        <div class="badge badge-success gap-2">
                                            <i data-feather="check-circle" class="w-3 h-3"></i>
                                            Validée
                                        </div>
                                    {% elseif inscription.statut == 'refusee' %}
                                        <div class="badge badge-error gap-2">
                                            <i data-feather="x-circle" class="w-3 h-3"></i>
                                            Refusée
                                        </div>
                                    {% else %}
                                        <div class="badge badge-ghost">{{ inscription.statut }}</div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if inscription.montant %}
                                        <div class="flex items-center gap-1">
                                            <span class="font-medium">{{ inscription.montant|number_format(0, ',', ' ') }}</span>
                                            <span class="text-xs">Ar</span>
                                        </div>
                                    {% else %}
                                        <span class="text-gray-400">Non défini</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="dropdown dropdown-end">
                                        <label tabindex="0" class="btn btn-ghost btn-sm">
                                            <i data-feather="more-horizontal" class="w-4 h-4"></i>
                                        </label>
                                        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                                            <li><a href="{{ path('app_inscription_show', {'id': inscription.id}) }}">
                                                <i data-feather="eye" class="w-4 h-4"></i>
                                                Voir détails
                                            </a></li>
                                            <li><a href="{{ path('app_inscription_edit', {'id': inscription.id}) }}">
                                                <i data-feather="edit-2" class="w-4 h-4"></i>
                                                Modifier
                                            </a></li>
                                            {% if inscription.statut == 'en_attente' %}
                                            <li class="divider"></li>
                                            <li><a onclick="updateStatus({{ inscription.id }}, 'validee')" class="text-success">
                                                <i data-feather="check" class="w-4 h-4"></i>
                                                Valider
                                            </a></li>
                                            <li><a onclick="updateStatus({{ inscription.id }}, 'refusee')" class="text-error">
                                                <i data-feather="x" class="w-4 h-4"></i>
                                                Refuser
                                            </a></li>
                                            {% endif %}
                                            <li class="divider"></li>
                                            <li><a class="text-error" onclick="confirmDelete({{ inscription.id }})">
                                                <i data-feather="trash-2" class="w-4 h-4"></i>
                                                Supprimer
                                            </a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-12">
                                    <div class="flex flex-col items-center gap-4">
                                        <i data-feather="clipboard-list" class="w-16 h-16 text-gray-300"></i>
                                        <div>
                                            <h3 class="text-lg font-medium text-gray-500">Aucune inscription trouvée</h3>
                                            <p class="text-gray-400">Les nouvelles inscriptions apparaîtront ici</p>
                                        </div>
                                        <a href="{{ path('app_inscription_new') }}" class="btn btn-primary">
                                            <i data-feather="user-plus" class="w-4 h-4"></i>
                                            Nouvelle inscription
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {% if inscriptions|length > 0 %}
            <div class="flex items-center justify-between mt-4">
                <div class="text-sm text-gray-500">
                    Affichage de {{ inscriptions|length }} inscription(s)
                </div>
                <div class="join">
                    <button class="join-item btn btn-sm">«</button>
                    <button class="join-item btn btn-sm btn-active">1</button>
                    <button class="join-item btn btn-sm">2</button>
                    <button class="join-item btn btn-sm">3</button>
                    <button class="join-item btn btn-sm">»</button>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <dialog id="delete_modal" class="modal">
        <div class="modal-box">
            <h3 class="font-bold text-lg">Confirmer la suppression</h3>
            <p class="py-4">Êtes-vous sûr de vouloir supprimer cette inscription ? Cette action ne peut pas être annulée.</p>
            <div class="modal-action">
                <form method="dialog">
                    <button class="btn">Annuler</button>
                    <button class="btn btn-error" onclick="deleteInscription()">Supprimer</button>
                </form>
            </div>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>
{% endblock %}

{% block javascripts %}
<script>
    let inscriptionToDelete = null;
    
    function confirmDelete(inscriptionId) {
        inscriptionToDelete = inscriptionId;
        document.getElementById('delete_modal').showModal();
    }
    
    function deleteInscription() {
        if (inscriptionToDelete) {
            console.log('Deleting inscription with ID:', inscriptionToDelete);
            // Handle deletion here
        }
        inscriptionToDelete = null;
    }
    
    function updateStatus(inscriptionId, status) {
        console.log('Updating inscription', inscriptionId, 'to status', status);
        // Handle status update here
    }
    
    // Filtering functionality
    function filterInscriptions() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value;
        const yearFilter = document.getElementById('yearFilter').value;
        const rows = document.querySelectorAll('.inscription-row');
        
        rows.forEach(row => {
            const studentName = row.querySelector('.font-bold').textContent.toLowerCase();
            const statusBadge = row.querySelector('.badge');
            const status = statusBadge ? statusBadge.textContent.toLowerCase() : '';
            
            const matchesSearch = studentName.includes(searchTerm);
            const matchesStatus = !statusFilter || status.includes(statusFilter.replace('_', ' '));
            // Year filter would need to be implemented based on your data structure
            
            if (matchesSearch && matchesStatus) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }
    
    // Event listeners for filters
    document.getElementById('searchInput').addEventListener('input', filterInscriptions);
    document.getElementById('statusFilter').addEventListener('change', filterInscriptions);
    document.getElementById('yearFilter').addEventListener('change', filterInscriptions);
</script>
{% endblock %}
