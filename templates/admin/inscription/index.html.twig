{% extends 'admin_base.html.twig' %}

{% block title %}Inscriptions - School Management System{% endblock %}

{% block page_title %}Liste des Inscriptions{% endblock %}

{% block header_actions %}
    <a href="{{ path('admin_inscription_new') }}" class="btn btn-primary">
        <i data-feather="plus" class="w-4 h-4"></i>
        Nouvelle inscription
    </a>
{% endblock %}

{% block body %}
    <!-- Filters -->
    <div class="card bg-base-100 shadow mb-6">
        <div class="card-body">
            <h2 class="card-title">Filtres</h2>
            <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Nom de l'étudiant</span>
                    </label>
                    <input type="text" name="student_name" value="{{ app.request.get('student_name') }}" class="input input-bordered" placeholder="Rechercher par nom">
                </div>
                
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Classe</span>
                    </label>
                    <select name="classe_id" class="select select-bordered">
                        <option value="">Toutes les classes</option>
                        {# You would populate this with actual classes #}
                        <option value="1">Classe A</option>
                        <option value="2">Classe B</option>
                    </select>
                </div>
                
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Statut</span>
                    </label>
                    <select name="statut" class="select select-bordered">
                        <option value="">Tous les statuts</option>
                        <option value="pending" {{ app.request.get('statut') == 'pending' ? 'selected' : '' }}>En attente</option>
                        <option value="confirmed" {{ app.request.get('statut') == 'confirmed' ? 'selected' : '' }}>Confirmée</option>
                        <option value="cancelled" {{ app.request.get('statut') == 'cancelled' ? 'selected' : '' }}>Annulée</option>
                        <option value="completed" {{ app.request.get('statut') == 'completed' ? 'selected' : '' }}>Terminée</option>
                    </select>
                </div>
                
                <div class="form-control flex items-end">
                    <button type="submit" class="btn btn-primary">Filtrer</button>
                    <a href="{{ path('admin_inscription_index') }}" class="btn btn-ghost ml-2">Réinitialiser</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Total Inscriptions</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-primary/10 text-primary">
                        <i data-feather="clipboard" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Confirmées</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|filter(i => i.statut == 'confirmed')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-success/10 text-success">
                        <i data-feather="check-circle" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">En attente</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|filter(i => i.statut == 'pending')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-warning/10 text-warning">
                        <i data-feather="clock" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Annulées</h2>
                        <p class="text-2xl font-bold">{{ inscriptions|filter(i => i.statut == 'cancelled')|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-error/10 text-error">
                        <i data-feather="x-circle" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inscriptions Table -->
    <div class="card bg-base-100 shadow">
        <div class="card-body">
            <div class="flex items-center justify-between mb-4">
                <h2 class="card-title">Inscriptions</h2>
                <div class="flex gap-2">
                    <div class="form-control">
                        <input type="text" placeholder="Rechercher..." class="input input-bordered input-sm w-full max-w-xs" />
                    </div>
                </div>
            </div>
            
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>Étudiant</th>
                            <th>Classe</th>
<th>Année scolaire</th>
                            <th>Date d'inscription</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for inscription in inscriptions %}
                            <tr class="hover">
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar">
                                            <div class="w-12 rounded-full">
                                                <img src="https://images.unsplash.com/photo-{{ 1500000000000 + (inscription.etudiant.id * 12345) }}?w=100&h=100&fit=crop&crop=face" alt="Avatar" />
                                            </div>
                                        </div>
                                        <div>
                                            <div class="font-bold">{{ inscription.etudiant.nom }} {{ inscription.etudiant.prenom }}</div>
                                            <div class="text-sm opacity-50">ID: {{ inscription.etudiant.id }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="font-bold">{{ inscription.classe.nom }}</div>
                                    <div class="text-sm">{{ inscription.classe.niveau.nom }}</div>
                                </td>
                                <td>{{ inscription.anneeScolaire.libelle }}</td>
                                <td>{{ inscription.dateInscription|date('d/m/Y') }}</td>
                                <td>
                                    <div class="badge {{ inscription.statusBadgeClass }} gap-2">
                                        <i data-feather="info" class="w-3 h-3"></i>
                                        {{ inscription.statusLabel }}
                                    </div>
                                </td>
                                <td>
                                    <div class="flex gap-2">
                                        <a href="{{ path('admin_inscription_show', {'id': inscription.id}) }}" class="btn btn-ghost btn-sm tooltip" data-tip="Voir">
                                            <i data-feather="eye" class="w-4 h-4"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-12">
                                    <div class="flex flex-col items-center gap-4">
                                        <i data-feather="clipboard" class="w-16 h-16 text-gray-300"></i>
                                        <div>
                                            <h3 class="text-lg font-medium text-gray-500">Aucune inscription trouvée</h3>
                                            <p class="text-gray-400">Commencez par créer votre première inscription</p>
                                        </div>
                                        <a href="{{ path('admin_inscription_new') }}" class="btn btn-primary">
                                            <i data-feather="plus" class="w-4 h-4"></i>
                                            Nouvelle inscription
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {% if inscriptions|length > 0 %}
            <div class="flex items-center justify-between mt-4">
                <div class="text-sm text-gray-500">
                    Affichage de {{ inscriptions|length }} inscription(s)
                </div>
                <div class="join">
                    <button class="join-item btn btn-sm">«</button>
                    <button class="join-item btn btn-sm btn-active">1</button>
                    <button class="join-item btn btn-sm">2</button>
                    <button class="join-item btn btn-sm">3</button>
                    <button class="join-item btn btn-sm">»</button>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    // Search functionality
    document.querySelector('input[placeholder="Rechercher..."]').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            if (row.querySelector('.font-bold')) {
                const name = row.querySelector('.font-bold').textContent.toLowerCase();
                
                if (name.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        });
    });
</script>
{% endblock %}