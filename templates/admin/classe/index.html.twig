{% extends 'base.html.twig' %}

{% block title %}Classe index
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-header">
			<h3 class="">Liste classe</h3>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>Niveau</th>
						<th>Description</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for classe in classes %}
						<tr>
							<td>{{ classe.id }}</td>
							<td>{{ classe.nom }}</td>
							<td>{{ classe.niveau.nom }}</td>
							<td>{{ classe.description }}</td>
							<td>
								<a href="{{ path('app_classe_show', {'id': classe.id}) }}">show</a>
								<a href="{{ path('app_classe_edit', {'id': classe.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


	<a href="{{ path('app_classe_new') }}">Create new</a>
{% endblock %}
