{% extends 'admin_base.html.twig' %}

{% block title %}Liste des classes - School Management System{% endblock %}

{% block page_title %}Gestion des Classes{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_classe_new') }}" class="btn btn-primary">
        <i data-feather="plus" class="w-4 h-4"></i>
        Nouvelle classe
    </a>
{% endblock %}

{% block body %}
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Total Classes</h2>
                        <p class="text-2xl font-bold">{{ classes|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-primary/10 text-primary">
                        <i data-feather="book" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Classes Actives</h2>
                        <p class="text-2xl font-bold">{{ classes|filter(c => c.active ?? true)|length }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-success/10 text-success">
                        <i data-feather="check-circle" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Étudiants Total</h2>
                        <p class="text-2xl font-bold">{{ classes|reduce((carry, classe) => carry + (classe.etudiants|length), 0) }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-info/10 text-info">
                        <i data-feather="users" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card bg-base-100 shadow">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title text-sm">Moyenne/Classe</h2>
                        <p class="text-2xl font-bold">{{ classes|length > 0 ? ((classes|reduce((carry, classe) => carry + (classe.etudiants|length), 0)) / (classes|length))|round : 0 }}</p>
                    </div>
                    <div class="p-3 rounded-full bg-warning/10 text-warning">
                        <i data-feather="trending-up" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Classes Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for classe in classes %}
            <div class="card bg-base-100 shadow hover:shadow-lg transition-shadow">
                <div class="card-body">
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <h2 class="card-title">{{ classe.nom }}</h2>
                            {% if classe.niveau %}
                                <p class="text-sm text-gray-500 mb-2">{{ classe.niveau.nom }}</p>
                            {% endif %}
                            
                            <div class="space-y-2">
                                <div class="flex items-center gap-2 text-sm">
                                    <i data-feather="users" class="w-4 h-4 text-primary"></i>
                                    <span>{{ classe.etudiants|length }} étudiant(s)</span>
                                </div>
                                
                                {% if classe.salle %}
                                <div class="flex items-center gap-2 text-sm">
                                    <i data-feather="map-pin" class="w-4 h-4 text-info"></i>
                                    <span>Salle {{ classe.salle }}</span>
                                </div>
                                {% endif %}
                                
                                {% if classe.professeurPrincipal %}
                                <div class="flex items-center gap-2 text-sm">
                                    <i data-feather="user-check" class="w-4 h-4 text-success"></i>
                                    <span>{{ classe.professeurPrincipal.nom }}</span>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="dropdown dropdown-end">
                            <label tabindex="0" class="btn btn-ghost btn-sm btn-circle">
                                <i data-feather="more-horizontal" class="w-4 h-4"></i>
                            </label>
                            <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                                <li><a href="{{ path('app_classe_show', {'id': classe.id}) }}">
                                    <i data-feather="eye" class="w-4 h-4"></i>
                                    Voir détails
                                </a></li>
                                <li><a href="{{ path('app_classe_edit', {'id': classe.id}) }}">
                                    <i data-feather="edit-2" class="w-4 h-4"></i>
                                    Modifier
                                </a></li>
                                <li><a>
                                    <i data-feather="calendar" class="w-4 h-4"></i>
                                    Emploi du temps
                                </a></li>
                                <li class="divider"></li>
                                <li><a class="text-error" onclick="confirmDelete({{ classe.id }})">
                                    <i data-feather="trash-2" class="w-4 h-4"></i>
                                    Supprimer
                                </a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="card-actions justify-end mt-4">
                        <a href="{{ path('app_classe_show', {'id': classe.id}) }}" class="btn btn-sm btn-primary">
                            Voir détails
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full">
                <div class="card bg-base-100 shadow">
                    <div class="card-body text-center py-12">
                        <div class="flex flex-col items-center gap-4">
                            <i data-feather="book" class="w-16 h-16 text-gray-300"></i>
                            <div>
                                <h3 class="text-lg font-medium text-gray-500">Aucune classe trouvée</h3>
                                <p class="text-gray-400">Commencez par créer votre première classe</p>
                            </div>
                            <a href="{{ path('app_classe_new') }}" class="btn btn-primary">
                                <i data-feather="plus" class="w-4 h-4"></i>
                                Créer une classe
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Delete Confirmation Modal -->
    <dialog id="delete_modal" class="modal">
        <div class="modal-box">
            <h3 class="font-bold text-lg">Confirmer la suppression</h3>
            <p class="py-4">Êtes-vous sûr de vouloir supprimer cette classe ? Cette action ne peut pas être annulée.</p>
            <div class="modal-action">
                <form method="dialog">
                    <button class="btn">Annuler</button>
                    <button class="btn btn-error" onclick="deleteClasse()">Supprimer</button>
                </form>
            </div>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>
{% endblock %}

{% block javascripts %}
