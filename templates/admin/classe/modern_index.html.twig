    let classeToDelete = null;
    
    function confirmDelete(classeId) {
        classeToDelete = classeId;
        document.getElementById('delete_modal').showModal();
    }
    
    function deleteClasse() {
        if (classeToDelete) {
            console.log('Deleting classe with ID:', classeToDelete);
            // Handle deletion here
        }
        classeToDelete = null;
    }
</script>
{% endblock %}
